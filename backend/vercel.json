{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/checkout-reminders",
      "schedule": "0 18 * * 1-5"
    },
    {
      "path": "/api/cron/auto-clockout",
      "schedule": "1 0 * * *"
    }
  ]
}
