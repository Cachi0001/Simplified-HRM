{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/dist/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/checkout-reminders",
      "schedule": "0 18 * * 1-5"
    },
    {
      "path": "/api/cron/auto-clockout",
      "schedule": "1 0 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
