# Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# Backend API URL (when deployed) - should include /api suffix
VITE_API_URL=https://your-backend.vercel.app/api

# For local development, you can use either:
# VITE_API_URL=http://localhost:3000/api (with /api)
# or
# VITE_API_URL=http://localhost:3000 (without /api - /api will be added automatically)

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Frontend URL (used for email redirects and links)
VITE_FRONTEND_URL=http://localhost:5173

# Office Location Settings (for attendance check-in/out)
VITE_OFFICE_LATITUDE=6.5244
VITE_OFFICE_LONGITUDE=3.3792
VITE_OFFICE_RADIUS=100
VITE_REQUIRE_OFFICE_LOCATION=false
VITE_ALLOW_LOCATION_FALLBACK=true

# Optional: Other configurations
# VITE_APP_NAME=Go3net HR Management System
